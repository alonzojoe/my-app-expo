{
  "expo": {
    "scheme": "myapp",
    "name": "_",
    "slug": "LingadCare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-final.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo-final.png",
      "resizeMode": "contain",
      "backgroundColor": "#001C63"
    },
    "ios": {
      "bundleIdentifier": "com.myapp",
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSCameraUsageDescription": "We need access to your camera to take photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-final.png",
        "backgroundColor": "#001C63"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "INTERNET",
        "CAMERA",
        "INTERNET",
        "CAMERA"
      ],
      "package": "com.myapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
